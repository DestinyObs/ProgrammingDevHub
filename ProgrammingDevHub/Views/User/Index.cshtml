<body class="bg-gray-100">

    <div class="mx-auto p-4">
        <h1 class="text-2xl mb-8">Users</h1>
        <div class="flex flex-col" data-aos="fade-up">
            <div class="-my-2 overflow-x-auto sm:-mx-12 lg:-mx-12">
                <div class="py-2 align-middle inline-block min-w-full sm:px-8 lg:px-12">
                    <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                        <div class="mt-8 bg-white overflow-hidden shadow sm:rounded-lg">
                            <div class="flex items-center py-4 px-6">
                                <input type="text" id="SearchInput" placeholder="Search" class="py-2 px-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                                <button onclick="searchUser()" class="px-4 py-2 text-sm bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg">Search</button>
                            </div>
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead>
                                <tr>
                                    <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                                        Email
                                    </th>
                                    <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                                        GitHub Name
                                    </th>
                                    <th class="hidden px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                                        Gender
                                    </th>
                                    <th class="hidden px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                                        CountryCode
                                    </th>
                                    <th class="hidden px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                                        Phone
                                    </th>
                                    <th class="hidden px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                                        Country
                                    </th>
                                    <th class="hidden px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                                        Postal Code
                                    </th>
                                    <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                                        State
                                    </th>
                                    <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                                        Years Of Experience
                                    </th>
                                    <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                                        Level of Programming
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                   
                                @foreach (var item in Model)
                                {
                                        <tr>
                                        <td class="px-6 py-4 whitespace-no-wrap hidden">
                                            <div class="flex items-center">
                                                <div class="ml-4">
                                                    <div  class="text-sm leading-5 font-medium text-gray-900">@item?.Id</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-no-wrap">
                                            <div class="text-sm leading-5 text-gray-900">@item?.UserName</div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-no-wrap">
                                            <div class="text-sm leading-5 text-gray-900">@item?.GitHubName</div>
                                        </td>
                                        <td class="hidden px-6 py-4 whitespace-no-wrap">
                                            <div class="text-sm leading-5 text-gray-900">@item?.Gender</div>
                                        </td>
                                        <td class="hidden px-6 py-4 whitespace-no-wrap">
                                            <div class="text-sm leading-5 text-gray-900">@item?.CountryCode</div>
                                        </td>
                                            <td class="hidden px-6 py-4 whitespace-no-wrap">
                                            <div class="text-sm leading-5 text-gray-900">@item?.PhoneNumber</div>
