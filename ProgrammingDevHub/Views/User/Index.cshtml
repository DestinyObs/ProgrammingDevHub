    <script>
        AOS.init();
                function searchUser() {
                    // Get the search input value
                    var searchValue = document.getElementById("SearchInput").value.toLowerCase();

                    // Get all table rows in the tbody
                    var tableRows = document.getElementsByTagName("tbody")[0].getElementsByTagName("tr");

                    // Loop through each row
                    for (var i = 0; i < tableRows.length; i++) {
                        var row = tableRows[i];
                        var found = false;

                        // Loop through each cell in the row (except the first hidden cell)
                        for (var j = 1; j < row.cells.length; j++) {
                            var cell = row.cells[j];
                            var cellValue = cell.innerText.toLowerCase();

                            // Check if the cell value contains the search input value
                            if (cellValue.includes(searchValue)) {
                                found = true;
                                break;
                            }
                        }

                        // Show or hide the row based on the search result
                        if (found) {
                            row.style.display = "";
                        } else {
                            row.style.display = "none";
                        }
                    }
                }
    </script>
